/**index.wxss**/

.page {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: fixed;
  z-index: 0;
}

.nav-bar {
  height: 8vh;
  width: 100vw;
  background-color: rgb(240, 240, 240);
  flex: none;
  display: flex;
  align-items: center;
  overflow: hidden;
}

.canvas {
  flex: auto;
  width: 100%;
  transform: translateX(0);
}

.canvas.hide {
  transform: translateX(-70vw);
}

.title {
  flex: auto;
  padding: 0 20rpx;
}

.menu {
  height: 8vh;
  width: 8vh;
  background-color: rgb(223, 223, 223);
  text-align: center;
  line-height: 8vh;
}

.menu-can {
  position: absolute;
  top: calc(8vh - 1px);
  right: 0;
  width: 70vw;
  height: calc(92vh + 1px);
  background-color: rgb(240, 240, 240);
  overflow: auto;
  flex: none;
  display: flex;
  flex-direction: column;
  transform: translateX(100%);
  transition: transform ease 0.33s;
  will-change: trasform;
  z-index: 2;
  -webkit-overflow-scrolling: touch;
}

.menu-can.active {
  transform: translateX(0%);
}

.menu-item {
  padding: 30rpx 40rpx;
  transition: background-color ease 0.33s;
}

.menu-item.active {
  background-color: rgb(223, 223, 223);
}

.helper-canvas {
  opacity: 0;
  display: block;
  position: absolute;
  top: 0;
  left: -100vw;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
}

.btn-screenshot,
.btn-screenrecord {
  position: absolute;
  bottom: 40rpx;
  left: 40rpx;
  padding: 12rpx 18rpx;
  border: 1px solid;
  background-color: white;
}

.btn-screenrecord {
  bottom: 130rpx;
}
